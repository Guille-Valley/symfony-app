{% extends 'base.html.twig' %}

{% block title %}Hello QuoteController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}

		.wrapper {
			margin: 1em auto;
			width: 95%;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! âœ…</h1>

		This friendly message is coming from:
		<ul>
			<li>Your controller at
				<code>
					<a href="{{ '/var/www/symfony_docker/src/Controller/QuoteController.php'|file_link(0) }}">src/Controller/QuoteController.php</a>
				</code>
			</li>
			<li>Your template at
				<code>
					<a href="{{ '/var/www/symfony_docker/templates/quote/index.html.twig'|file_link(0) }}">templates/quote/index.html.twig</a>
				</code>
			</li>
		</ul>
	</div>

	<div class="wrapper">
		<h1>Great Quotes</h1>
		<table class="table table-striped table-hover table-bordered">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Quote</th>
					<th scope="col">Historian</th>
					<th scope="col">Year</th>
				</tr>
			</thead>
			<tbody>
				{% for quote in quotes %}
					<tr>
						<td>{{ loop.index }}</td>
						<td>{{ quote.quote }}</td>
						<td>{{ quote.historian }}</td>
						<td>{{ quote.year }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
